<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        <!-- Bootstrap core CSS -->
        <link href="{{ asset('css/lib/bootstrap.min.css') }}" rel="stylesheet">
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('main_index') }}">openNetworkHMI</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                      <a class="nav-link" href="{{ path('main_index') }}">Main</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                      <a class="nav-link" href="{{ path('admin_index') }}">Admin</a>
                    </li>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                        </li>
                    {% endif %}
                </ul>
                {% if is_granted('ROLE_ADMIN') and app.request.attributes.get( '_route' ) != 'admin_index' %}
                <div>
                    <span id="minONHRestart" class="badge badge-warning" style="display: none">Server need restart</span>
                    <span id="minONHStatus" class="badge badge-secondary">C</span>
                </div>
                {% endif %}
            </div>
        </nav>
                
        <br />
        
        <div class="container-fluid">
        {% block body %}{% endblock %}
        </div>
        
        <script src="{{ asset('js/lib/jquery-3.4.1.min.js') }}"></script>
        <script src="{{ asset('js/lib/bootstrap.bundle.min.js') }}"></script>
        
        {% if is_granted('ROLE_ADMIN') and app.request.attributes.get( '_route' ) != 'admin_index' %}
            <script src="{{ asset('js/admin/minStatus.js') }}"></script>
        {% endif %}
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
