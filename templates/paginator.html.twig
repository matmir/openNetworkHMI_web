<div>
    
    <nav aria-label="Page navigation">
    <ul class="pagination">
        {% if paginator.getCurrentPage() <= 1 %}
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
        {% else %}
            <li class="page-item"><a class="page-link" href="{{ path(route_name, {(route_page): paginator.getCurrentPage()-1, (route_perPage): paginator.getRowsPerPage()}|merge((route_otherParams))) }}">Previous</a></li>
        {% endif %}
        
        {% for page in paginator.getViewPages() %}
            {% if page == paginator.getCurrentPage() %}
                <li class="page-item active"><a class="page-link" href="{{ path(route_name, {(route_page): page, (route_perPage): paginator.getRowsPerPage()}|merge((route_otherParams))) }}">{{ page }}</a></li>
            {% else %}
                <li class="page-item"><a class="page-link" href="{{ path(route_name, {(route_page): page, (route_perPage): paginator.getRowsPerPage()}|merge((route_otherParams))) }}">{{ page }}</a></li>
            {% endif %}
        {% endfor %}
        
        {% if paginator.getCurrentPage() == paginator.getTotalPages() %}
            <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
        {% else %}
            <li class="page-item"><a class="page-link" href="{{ path(route_name, {(route_page): paginator.getCurrentPage()+1, (route_perPage): paginator.getRowsPerPage()}|merge((route_otherParams))) }}">Next</a></li>
        {% endif %}
    </ul>
    </nav>
    
</div>
